div(*ngIf="auth.user$ | async; then authenticated else guest")

ng-template(#guest='')
	h3 Howdy, GUEST
	button((click)='auth.googleSignin()')
		i.fa.fa-google
		span Login

ng-template(#authenticated='')
	div(*ngIf='auth.user$ | async as user')
		h3 Howdy, {{ user.displayName }}
		button((click)='auth.signOut()') Logout
